{
  "openapi": "3.0.3",
  "info": {
    "title": "little BIG Store",
    "description": "An online grocery store",
    "version": "1.0.11"
  },
  "servers": [
    {
      "url": "localhost:5500"
    }
  ],
  "tags": [
    {
      "name": "inventory",
      "description": "Access to inventory items, full list, by category and by individual product"
    },
    {
        "name": "orders",
        "description": "Access to place, view, edit or delete orders"
    },
    {
      "name": "account",
      "description": "Operations about user"
    },
    {
        "name": "reviews",
        "description": "Access to write, edit or delete reviews"
    }   
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Store front",
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": {
            "description": "page not found"
          }
        }
      }
    },
    "/inventory/{categoryId}": {
        "get": {
            "tags": ["inventory"],
        "description": "Provides list of inventory categories",
        "parameters": [
            {
                "name": "categoryId",
                "in": "path",
                "required": true,
                "type": "string"
            }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "category not found"
          }
        }
      }
    },
    "/inventory":{
        "get": {
        "tags": ["inventory"],
        "description": "All inventory available in the store",
        "responses": {
            "200": {
                "description": "successful operation"
            },
            "404": {
                "description": "product not found"
            }
            }
        }
        },
    "/inventory/{productId}": {
      "get": {
        "tags": [
          "inventory"
        ],
        "description": "loads products by id",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "product not found"
          }
        }
      },
      "delete": {
        "tags": [
          "inventory"
        ],
        "description": "delete an inventory item",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
            "200": {
                "description": "Item successfully deleted"
            },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "product not found"
          }
        }
      },
      "put": {
        "tags": [
          "inventory"
        ],
        "description": "edit an inventory item",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful update"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "product not found"
          }
        }
      }
    },
    "/order": {
      "post": {
        "tags": [
          "order"
        ],
        "description": "place a new grocery order",
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid input"
          },
          "422": {
            "description": "Validation exception"
          }
        }
      }
    },
    "/order/{orderId}": {
      "get": {
        "tags": [
          "order"
        ],
        "description": "get a specific order by id",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Order not found"
          }
        }
      },
      "delete": {
        "tags": [
          "order"
        ],
        "description": "delete an order",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
            "200": {
                "description": "successful deletion"
            },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Order not found"
          }
        }
      }
    },
    "put": {
        "tags": [
          "order"
        ],
        "description": "edit an order",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
            "200": {
                "description": "successful update"
            },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "Order not found"
          }
        }
      }
    },
    "/account": {
      "post": {
        "tags": [
          "account"
        ],
        "description": "create a new account",
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "422": {
            "description": "validation exception"
          }
        }
      }
    },
    "/account/login": {
      "get": {
        "tags": [
          "account"
        ],
        "description": "log in to user account",
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "description": "The user name for login",
            "required": false,
              "type": "string"
          },
          {
            "name": "password",
            "in": "query",
            "description": "The password for login in clear text",
            "required": false,    
              "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
              },
          "400": {
            "description": "Invalid username/password supplied"
          }
        }
      }
    },
    "/account/{username}":{
      "get": {
        "tags": [
          "account"
        ],
        "description": "Access account information",
        "responses": {
          "200": {
            "description": "successful  operation"
          },
          "400": {
            "description": "Invalid username supplied"
          },
          "404": {
            "description": "no account found with that username"
          }
        }
    },
    "/account/logout": {
      "get": {
        "tags": [
          "account"
        ],
        "description": "log user out of account",
        "responses": {
          "200": {
            "description": "successful operation"
          }
        }
      }
    },
    "/account/all": {
      "get": {
        "tags": [
          "account"
        ],
        "description": "create list of all accounts",
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "404": {
            "description": "error accessing account list"
          }
        }
      }
    },
    "/account/update/{username}": {
      "put": {
        "tags": [
          "account"
        ],
        "description": "Edit user account",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "account"
        ],
        "description": "deleting a user account",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
    "/reviews": {
      "post": {
        "tags": [
          "reviews"
        ],
        "description": "create a review for a grocery item",
        "parameters": [
            {
                "name": "body",
                "in": "body",
                "schema": {
                    "type": "object",
                    "properties": {
                        "productName": {
                        },
                        "price": {},
                        "label": {},
                        "category": {},
                        "sizeOptions": {},
                        "SKU": {},
                        "productImage": {}
                    }
                }
            }
        ],
       "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "reviews"
        ],
        "description": "delete a review",
        "parameters": [
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
            "200": {
                "description": "successful deletion"
            },
          "400": {
            "description": "Invalid ID supplied"
          },
          "404": {
            "description": "review not found"
          }
        }
      },
      "put": {
        "tags": [
          "reviews"
        ],
        "description": "edit a review",
        "parameters": [
          {
            "name": "reviewId",
            "in": "path",
            "required": true,
              "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "412": {
            "description": "Precondition Failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
      }
    }
  }
    